<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
     <style name="CodeFont" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CodeFont.small" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item> 
    </style>
    <style name="CodeFont.normal" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item> 
    </style>
    <style name="CodeFont.large" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item> 
    </style>
    <style name="CodeFont.bold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item> 
    </style>
    <style name="CodeFont.smallgray" parent="@android:style/TextAppearance">
          <item name="android:textSize">14sp</item> 
        <item name="android:textColor">#808080</item> 
    </style> 
     <style name="CodeFont.radiotext" parent="@android:style/TextAppearance">
          <item name="android:textSize">14sp</item> 
    </style>    

</resources>
